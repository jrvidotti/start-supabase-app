{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["*.ts", "*.tsx", "*.json"],
		"experimentalScannerIgnores": [
			"node_modules/**",
			".output/**",
			".tanstack/**",
			"dist/**",
			"build/**",
			".cache/**",
			".vercel/**",
			"drizzle/migrations/**",
			"yarn.lock",
			"package-lock.json",
			"*.min.js",
			"*.min.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
